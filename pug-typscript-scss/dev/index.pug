extends layout.pug 
block scripts 
	script(src="/js/validation.js") 
block content 
	div.validation
		pre.validation__logo
			|    _   _  __   _                   _   _      
			br
			|   /_\ | |/ /  /_\  _ __ _  _ _ __ | |_(_)_ _  
			br
			|  / _ \| ' <  / _ \| '_ \ || | '  \| / / | ' \ 
			br
			| /_/ \_\_|\_\/_/ \_\ .__/\_,_|_|_|_|_\_\_|_||_|
			br
			|                   |_|
		div.validation__header The following is an example form with the diffrent types of validation the library provides with Aria friendly fields.
		div.validation__form
			form(id='my_form' autocompleate='off')
				div.validation__form__content
					div.validation__explanation
						p Example name field that is required
						p Regex matches on Latin based langauges, Chinese, Korean and Japanese for uppercase, lowercase, spaces, dashes and apostrophe 
						p /^[-'a-zA-Z#\s\u4e00-\u9eff]{1,}$/i; 
					div.validation__form__field
						p.v-error
						label(for='v-name') Name: *
						input(type='text' id='v-name' name='name' aria-required="true" required)
					div.validation__explanation 
						p Email field that is required
						p Regex matches on correct email addresses
						p /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
					div.validation__form__field
						p.v-error
						label(for='v-email') Email Address: *
						input(type='text' id='v-email' name='email' aria-required="true" required)
					div.validation__explanation 
						p Example phone number field that is not required
						p Regex matches on international phone numbers allowing the + symbol
						p /^(?:(?:\(?(?:00|\+)([1-4]\d\d|[1-9]\d?)\)?)?[\-\.\ \\\/]?)?((?:\(?\d{1,}\)?[\-\.\ \\\/]?){0,16})(?:[\-\.\ \\\/]?(?:#|ext\.?|extension|x)[\-\.\ \\\/]?(\d+))?$/i
					div.validation__form__field
						p.v-error
						label(for='v-phone') Phone Number:
						input(type='text' id='v-phone' name='phone' aria-required="false")
					div.validation__explanation 
						p Example field for a postal address, that is not required
						p Regex matches on Latin based langauges, Chinese, Korean and Japanese for uppercase, lowercase, spaces, dashes, apostrophe, numbers and some punctuation 
						p /^[-'a-zA-Z0-9\s_.,!\"\'\$\&\;\?\u4e00-\u9eff]{1,}$/i;
					div.validation__form__field
						p.v-error
						label(for='v-address') Postal Address:
						input(type='text' id='v-address' name='address' aria-required="false")
					div.validation__explanation 
						p Example message field that is required
						p Regex matches on Latin based langauges, Chinese, Korean and Japanese for uppercase, lowercase, spaces, dashes, apostrophe, numbers and some punctuation 
						p /^[-'a-zA-Z0-9\s_.,!\"\'\$\&\;\?\u4e00-\u9eff]{1,}$/i;
					div.validation__form__field
						p.v-error
						label(for='v-message') Message: *
						textarea(id='v-message' name='v-message' aria-required="true" required)
					div.validation__explanation 
						p Example radio select group that requires at least one option to be selected
					div.validation__form__field
						div.validation__form__radio__header What is your prefferd method of contact?：
						div.validation__form__field__radio.radio_group
							p.v-error
							input(id="phone" type="radio" name="radio_select")
							label(for="phone") Phone
							input(id="email" type="radio" name="radio_select")
							label(for="email") Email
							input(id="instagram" type="radio" name="radio_select")
							label(for="instagram") Instagram
							input(id="no" type="radio" name="radio_select")
							label(for="no") No contact
					div.validation__explanation 
						p Example dropdown option select that is required
					div.validation__form__field
						div.validation__form__field__dropdown
							p.v-error
							label(for="v-language") Language Selection: *
							select(id="v-language" name="language" required)
								option(value="" selected) Please Select
								option(value="en") English
								option(value="es") Español
								option(value="zh-hk") 繁體
								option(value="zh-cn") 简体
								option(value="kr") 한국어
					div.validation__explanation 
						p Example custom checkbox's that are required
					div.validation__form__field.privacy_policy_agreement
						p.v-error
						input(type='checkbox' id='privacy_policy' name='privacy_policy' aria-required="true")
						label(for='privacy_policy') By ticking this box you have read and agreed to our #[a(href='#' title='read our privacy policy') privacy policy]
					div.validation__form__field.terms_and_conditions_agreement
						p.v-error
						input(type='checkbox' id='terms_and_conditions' name='terms_and_conditions' aria-required="true") 
						label(for='terms_and_conditions') By ticking this box you have read and agreed to our #[a(href='#' title='read our terms and conditions') terms &amp; conditions]
					div.validation__explanation 
						p Example custom submit button
					div.validation__form__field
						p.message_error
						div.validation__form__submit
							div.validation__form__submit__button(tabindex='0' aria-label="click here to submit the form") SUBMIT